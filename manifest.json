{
  "name": "GitHub Conventional Comments",
  "version": "1.0",
  "description": "A browser extension to help you write conventional comments.",
  "manifest_version": 3,
  "permissions": ["storage"],
  "action": {
    "default_popup": "settings.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["main.js"]
    }
  ]
}
